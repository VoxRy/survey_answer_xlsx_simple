<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="survey_user_input_view_form_inherit_xlsx" model="ir.ui.view">
        <field name="name">survey.user_input.view.form.inherit.xlsx</field>
        <field name="model">survey.user_input</field>
        <field name="inherit_id" ref="survey.survey_user_input_view_form"/>
        <field name="arch" type="xml">
            <field name="survey_id" position="after">
                <field name="is_special_form" invisible="1"/>
                <group string="Massbiome Barcode" attrs="{'invisible': [('is_special_form', '=', False)]}">
                    <field name="barcode_sn"/>
                </group>
            </field>
        </field>
    </record>

    <record id="survey_user_input_view_tree_inherit_xlsx" model="ir.ui.view">
        <field name="name">survey.user_input.view.tree.inherit.xlsx</field>
        <field name="model">survey.user_input</field>
        <field name="inherit_id" ref="survey.survey_user_input_view_tree"/>
        <field name="arch" type="xml">
            <field name="survey_id" position="after">
                <field name="is_special_form" invisible="1"/>
            </field>
        </field>
    </record>

    <!-- Server Action for custom Export -->
    <record id="action_export_user_inputs_xlsx_server" model="ir.actions.server">
        <field name="name">Excel'e Aktar (Sorulu Liste)</field>
        <field name="model_id" ref="survey.model_survey_user_input"/>
        <field name="binding_model_id" ref="survey.model_survey_user_input"/>
        <field name="binding_view_types">list</field>
        <field name="state">code</field>
        <field name="code">
if records:
    action = records.action_export_selected_answers()
        </field>
    </record>
</odoo>
